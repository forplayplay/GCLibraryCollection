<h2>Uploaded Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Author(s)</th>
      <% if admin_user? %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @new_books.each do |b| %>
    <tr>
      <td><%= link_to b.title, book_path(b.id) %></td>

      <td><%= link_to b.genre.name, genre_path(b.genre) if b.genre %></td>

      <td>
        <% b.authors.each do |a| %>
          <%= link_to a.display_name, author_path(a) %>
        <% end %>
      </td>

      <% if admin_user? %>
        <td>
        <%= link_to "edit", edit_book_path(b) %>
        <%= link_to "delete", book_path(b), method: :delete, data: {confirm: "Are you sure you want to delete this book?"} %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>