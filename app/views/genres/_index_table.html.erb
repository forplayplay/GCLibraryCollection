<table>
  <thead>
    <tr>
      <th><%= sortable "name", "Category Name" %></th>
      <!-- unimplemented -->
      <th>Number of Books</th>
      <% if admin_user? %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |g| %>
    <tr>
      <td> <%= link_to g.name, genre_path(g.id) %></td>

      <td><%= g.books.count %></td>

      <% if admin_user? %>
        <td>
          <%= link_to "edit", edit_genre_path(g) %>
          <%= link_to "delete", genre_path(g), method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @genres %>