<% if @overdue_list_view %>
  <h2>Overdue Loans</h2>
  <%= button_to "Send Overdue Reminders", send_reminders_path %>
  <p>Reminders last sent on <%= OverdueMailer.last_sent.strftime("%m/%d/%Y") %></p>
<% else %>
  <h2>Loans</h2>
<% end %>
<table class="index tablesorter">
  <thead>
    <tr>
      <th>Book Title</th>
      <th>User</th>
      <th>Start Date</th>
      <th>Due Date</th>
      <th>Returned</th>
      <th>Renewals</th>
    </tr>
  </thead>
  <tbody>
    <% @loans.each do |l| %>
      <% overdue = "overdue" if l.overdue?; on_loan = "on-loan" if l.active? %>
      <tr class="<%= overdue %> <%= on_loan %>">
        <td><%= link_to l.book.title, book_path(l.book.id) %></td>
        <td><%= link_to l.user.name, user_path(l.user.id) %></td>
        <td><%= l.start_date %></td>
        <td><%= l.due_date %></td>
        <td><%= l.returned_date %></td>
        <td><%= l.renewal_count %></td>
        <td><%= link_to 'view', loan_path(l.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>